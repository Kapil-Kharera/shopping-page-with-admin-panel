<%- include("../../shared/includes/head", {pageTitle: "Add New Product"}) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>Add New Product</h1>
        <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
            <div class="input-field">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div class="input-field">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/png, image/jpg">
            </div>
            <div class="input-field">
                <label for="summary">Summary</label>
                <input type="text" id="summary" name="summary" required maxlength="250">
            </div>
            <div class="input-field">
                <label for="price">Price</label>
                <input type="number" id="price" name="price"  min="0.01" step="0.01" required>
            </div>
            <div class="input-field">
                <label for="description">Description</label>
                <textarea name="description" id="description" cols="30" rows="7" required></textarea>
            </div>
            <div class="input-field">
                <button type="reset" class="btn btn-alt">Reset</button>
                <button class="btn">Save</button>
            </div>
        </form>
    </main>
<%- include("../../shared/includes/footer") %>

