<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <div class="input-field">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= product.title %>" required>
    </div>
    <div class="input-field">
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/png, image/jpg">
    </div>
    <div class="input-field">
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" value="<%= product.summary %>" required maxlength="250">
    </div>
    <div class="input-field">
        <label for="price">Price</label>
        <input type="number" id="price" name="price"  min="0.01" step="0.01" value="<%= product.price %>" required>
    </div>
    <div class="input-field">
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="7" required><%= product.description %></textarea>
    </div>
    <div class="input-field">
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn">Save</button>
    </div>
</form>